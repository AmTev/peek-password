{
  "manifest_version": 2,
  "name": "Peek Password",
  "version": "2.0",
  "description": "Adds a button to show/hide password fields",
  "author":"Chandan Bhagat",
  "github":"https://github.com/amtev/peek-password",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"]
}
